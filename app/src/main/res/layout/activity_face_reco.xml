<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Face_Reco_Activity"
    android:id="@+id/face_Reco_layout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_Reco"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/lavender"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/Theme.AppCompat.DayNight"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:titleMarginStart="40dp" />

    <ImageView
        android:id="@+id/ImageView_Face_Reco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src ="@drawable/ic_baseline_add_photo_alternate_24" />

    <ImageButton
        android:id="@+id/Restart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="175dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="?android:attr/textColorHighlight"
        android:src="@drawable/ic_baseline_restart_alt_24"
        android:text="Take Picture"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>