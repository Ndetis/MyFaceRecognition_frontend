<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="40dp">


            <TextView
                android:id="@+id/univ_title_french"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginBottom="0dp"
                android:text="UNIVERSITE DE YAOUNDE I"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stars_french"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginLeft="20dp"
                android:text="***********"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/faculty_title_french"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:text="FACULTE DES SCIENCES"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="54dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/ngoa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/univ_title_english"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="0dp"
                android:text="UNIVERSITY OF YAOUNDE I"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stars_english"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="20dp"
                android:text="***********"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/faculty_title_english"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:text="FACULTY OF SCIENCE"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Liste de Présence"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="2dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="110dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="8dp">


            <TextView
                android:id="@+id/code_ue"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginBottom="0dp"
                android:text="Code UE:_____________"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filiere"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="Filière:________________"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/intitulé"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:text="Intitulé:__________________"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/semestre"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:text="Semestre:________________"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="0dp">

            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:text="Grade:____________"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/annee"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:text="Année:____________"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:id="@+id/Presence_Table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:textAlignment="center"
        android:scrollbars="vertical">

        <TableRow android:background="@color/lavender" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="N°"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Noms et Prenoms"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Matricule"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Signature"/>

        </TableRow>

        <TableRow android:background="@android:color/background_light" android:padding="5dp" >
            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:text="1"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Mbiada Fosso Cedric Geordan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20R2313"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </TableRow>

        <TableRow android:background="#E1E1E1" android:padding="5dp" >
            <TextView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:text="2"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Essola Essola Julien Joseph"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20V2213"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </TableRow>

    </TableLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:src="@drawable/ic_baseline_print_24"
        android:tooltipText="Print Page"
        app:shapeAppearance="@style/Widget.MaterialComponents.FloatingActionButton"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck"/>

</FrameLayout>